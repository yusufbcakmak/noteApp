# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Application Configuration
APP_NAME=Note Management App
APP_VERSION=1.0.0
APP_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_PATH=./database/notes.db
DATABASE_ENABLE_WAL=true
DATABASE_TIMEOUT=5000
DATABASE_VERBOSE=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=note-management-app
JWT_AUDIENCE=note-management-users

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
SECURITY_ENABLE_CORS=true
CORS_ORIGIN=*
SECURITY_ENABLE_HELMET=true
SECURITY_ENABLE_RATE_LIMIT=true
BCRYPT_ROUNDS=12